<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:shimmer_auto_start="true"
    app:shimmer_base_alpha="0.5"
    app:shimmer_duration="1200"
    app:shimmer_highlight_alpha="1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/stubMovieImage"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/bg_shimmer_rect"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/stubMovieTitle"
            android:layout_width="200dp"
            android:layout_height="14dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_shimmer_rect"
            app:layout_constraintLeft_toLeftOf="@id/stubMovieImage"
            app:layout_constraintTop_toBottomOf="@id/stubMovieImage" />

        <View
            android:id="@+id/stubMovieReleaseDate"
            android:layout_width="140dp"
            android:layout_height="14dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_shimmer_rect"
            app:layout_constraintLeft_toLeftOf="@id/stubMovieImage"
            app:layout_constraintTop_toBottomOf="@id/stubMovieTitle" />

        <View
            android:id="@+id/stubMovieVoteAverage"
            android:layout_width="60dp"
            android:layout_height="14dp"
            android:background="@drawable/bg_shimmer_rect"
            app:layout_constraintBottom_toBottomOf="@id/stubMovieTitle"
            app:layout_constraintRight_toRightOf="@id/stubMovieImage"
            app:layout_constraintTop_toTopOf="@id/stubMovieTitle" />

        <!-- 2nd Group -->

        <View
            android:id="@+id/stubMovieImage2"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_shimmer_rect"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/stubMovieReleaseDate" />

        <View
            android:id="@+id/stubMovieTitle2"
            android:layout_width="200dp"
            android:layout_height="14dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_shimmer_rect"
            app:layout_constraintLeft_toLeftOf="@id/stubMovieImage2"
            app:layout_constraintTop_toBottomOf="@id/stubMovieImage2" />

        <View
            android:id="@+id/stubMovieReleaseDate2"
            android:layout_width="140dp"
            android:layout_height="14dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_shimmer_rect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/stubMovieImage2"
            app:layout_constraintTop_toBottomOf="@id/stubMovieTitle2" />

        <View
            android:id="@+id/stubMovieVoteAverage2"
            android:layout_width="60dp"
            android:layout_height="14dp"
            android:background="@drawable/bg_shimmer_rect"
            app:layout_constraintBottom_toBottomOf="@id/stubMovieTitle2"
            app:layout_constraintRight_toRightOf="@id/stubMovieImage2"
            app:layout_constraintTop_toTopOf="@id/stubMovieTitle2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>